<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề chương trình -->
    <TextView
        android:id="@+id/textView0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chương trình tính chỉ số BMI"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FF9800" />

    <!-- Nhập tên -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập Tên:" />
    <EditText
        android:id="@+id/editten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Nhập chiều cao -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chiều Cao:" />
    <EditText
        android:id="@+id/editchieucao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <!-- Nhập cân nặng -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cân Nặng:" />
    <EditText
        android:id="@+id/editcannang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal" />

    <!-- Nút tính BMI -->
    <Button
        android:id="@+id/btnTinhBMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tính BMI" />

    <!-- Hiển thị kết quả BMI -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BMI = " />
    <EditText
        android:id="@+id/editBMI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false" />

    <!-- Hiển thị chẩn đoán -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuẩn đoán:" />
    <EditText
        android:id="@+id/editChandoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false" />

</LinearLayout>